@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/layout/_Layout.cshtml";
}



<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Lista de usuarios</h3>
        <button type="submit" onclick="AgregarUsuario();" class="btn btn-primary glyphicon glyphicon-plus">Agregar</button>
    </div><!-- /.box-header -->

    <div class="box-body">
        <table id="tableUsuarios" class="table table-hover table-bordered" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Usuario</th>
                    <th>Almacen</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div><!-- /.box -->
<!-- Modal alta de inventario-->
<div id="modalAlta" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Alta de Usuario</h4>
            </div>
            <div class="modal-body">

                <form role="form" action="/Admin/AltUser" method="post" id="AdminUser">

                    <div class="box-body">
                        <div id="mensaje" style="display:none"> </div>
                        <div class="form-group">
                            <label for="Nombre">Nombre</label>
                            <input type="text" required class="form-control" id="Nombre" name="NombreUsuario" placeholder="Ejemplo: Manuel" maxlength="20" pattern="[A-Za-z0-9]{3,20}" title="Ingresa valores de la a-z y numeros">
                        </div>
                        <div class="form-group">
                            <label for="Password">Contraseña</label>
                            <input type="password" required class="form-control" id="Password" name="Llave" placeholder="Ejemplo:Abc123" maxlength="10" pattern="[A-Za-z0-9]{6,10}" title="Ingresa valores de la a-z y numeros" />
                        </div>
                        <div class="form-group">
                            <label for="ConfirmPass">Confirmar Contraseña</label>
                            <input type="password" required class="form-control" id="ConfirmPass" name="Llave" placeholder="Ejemplo:Abc123" maxlength="10" pattern="[A-Za-z0-9]{6,10}" title="Ingresa valores de la a-z y numeros" />
                        </div>
                        <div class="form-group">
                            <label for="Almacen" class="control-label col-sm-2">Almacen</label>
                            <div class="col-sm-10">
                                <select class="selectpicker" id="Almacen" name="Almacen" required>
                                    <option value="">Seleccione almacén</option>
                                    <option value="SJI">Suc. SJI</option>
                                    <option value="Penuelas">Suc. Peñuelas</option>
                                    <option value="Menchaca">Suc. Menchaca</option>
                                </select>
                            </div>
                        </div>

                    </div>

                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" id="waitMe_ex" class="btn btn-primary glyphicon glyphicon-floppy-disk"> Guardar</button>
                        <button type="button" id="btnCancelar" onclick="ocultarModal('#modalAlta');" class="btn btn-info glyphicon glyphicon glyphicon-ban-circle"> Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





@Scripts.Render("~/Scripts/AltaUsuarios")
<!-- JS selectpicker -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/js/bootstrap-select.min.js"></script>
<!-- CSS selectpicker -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/css/bootstrap-select.min.css">

<!-- jQuery data table-->
<script src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
<!-- bootstap data table-->
<script src="https://cdn.datatables.net/1.10.11/js/dataTables.bootstrap.min.js" crossorigin="anonymous"></script>

<!-- CSS Data table-->
